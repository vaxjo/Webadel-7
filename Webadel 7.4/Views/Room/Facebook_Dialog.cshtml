@{ Layout = null; }

<script type="text/javascript">
    $(document).ready(function () {

        $("#confirm2").click(function () {
            $("#section2").slideDown();
        });

        $("#confirm3").click(function () {
            $("#section3").slideDown();
        });
    });
</script>

<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
            <h4 class="modal-title">External Facebook Link</h4>
        </div>
        
        <div class="modal-body">
            <p>Warning! You have clicked on a link that will take you to an external website.</p>
            <p class="text-center"><button type="button" id="confirm2" class="btn btn-primary">Confirm</button></p>

            <div id="section2" style="display: none;">
                <p>This link may or may not work, depending on the competancy of the link poster.</p>
                <p class="text-center"><button type="button" id="confirm3" class="btn btn-warning">I Understand the Risks</button></p>
            </div>

            <div id="section3" style="display: none;">
                <p>Ed's Room has no control over the content of this website. User discretion is advised.</p>
                <p class="text-center"><a class="btn btn-danger" href="@ViewBag.Url">Proceed to Facebook</a></p>
            </div>
        </div>
    </div>
</div>
