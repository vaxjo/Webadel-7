@model UserRoom
@{ Layout = null; }

@if (Model.Forgotten) {
    <div class='alert alert-dismissable fade in alert-info'>
        <button type='button' class='close' data-dismiss='alert' aria-hidden='true'>&times;</button>
        <p>This room is now forgotten. It will no longer show up in your Goto stream until you 'Unforget' it.</p>
        <p>Optionally select the number of days until it is automatically unforgotten.</p>
        <p>
            <div class="btn-group btn-group-sm forgetExpiration" role="group">
                <button type="button" data-timeout="1" class="btn btn-info">1</button>
                <button type="button" data-timeout="2" class="btn btn-info">2</button>
                <button type="button" data-timeout="3" class="btn btn-info">3</button>
                <button type="button" data-timeout="5" class="btn btn-info">5</button>
                <button type="button" data-timeout="10" class="btn btn-info">10</button>
                <button type="button" data-timeout="20" class="btn btn-info">20</button>
                <button type="button" data-timeout="30" class="btn btn-info">30</button>
            </div>
        </p>
    </div>

} else {
    <div class='alert alert-dismissable fade in alert-info'>
        <button type='button' class='close' data-dismiss='alert' aria-hidden='true'>&times;</button>
        This room is no longer forgotten.
    </div>
}