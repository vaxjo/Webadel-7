@{ ViewBag.Title = "Email Test"; }

<h2>Email Test</h2>

<form method="post" action="/Dev/SendEmail" class="form-horizontal">

    <div class="form-group">
        <label for="host" class="control-label col-sm-3">Host</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="host" value="" />
        </div>
        <div class="col-sm-3">
            <input type="text" class="form-control" name="port" value="465" />
        </div>
    </div>
    <div class="form-group">
        <label for="username" class="control-label col-sm-3">Username</label>
        <div class="col-sm-9">
            <input type="text" class="form-control" name="username" value="" />
        </div>
    </div>
    <div class="form-group">
        <label for="password" class="control-label col-sm-3">Password</label>
        <div class="col-sm-9">
            <input type="text" class="form-control" name="password" value="" />
        </div>
    </div>

    <hr />

    <div class="form-group">
        <label for="from" class="control-label col-sm-3">From</label>
        <div class="col-sm-9">
            <input type="text" class="form-control" name="from" value="" />
        </div>
    </div>
    <div class="form-group">
        <label for="to" class="control-label col-sm-3">To</label>
        <div class="col-sm-9">
            <input type="text" class="form-control" name="to" value="" />
        </div>
    </div>
    <div class="form-group">
        <label for="subject" class="control-label col-sm-3">Subject</label>
        <div class="col-sm-9">
            <input type="text" class="form-control" name="subject" value="Test Mail" />
        </div>
    </div>
    <div class="form-group">
        <label for="body" class="control-label col-sm-3">Body</label>
        <div class="col-sm-9">
            <input type="text" class="form-control" name="body" value="Test at @MvcApplication.Now.ToString("hh:mm:ss")" />
        </div>
    </div>

    <div class="form-group">
        <div class="col-sm-offset-3 col-sm-9">
            <button type="submit">Send</button>
        </div>
    </div>
    
</form>
